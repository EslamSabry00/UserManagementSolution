@model UserRolesViewModel
@{
    ViewData["Title"] = "Assign";
}

<h1>Manage Roles For @Model.UserName</h1>

<form asp-action="Assign">
    @Html.HiddenFor(m => m.UserId)
    <div class="form-group">
        <label>Roles</label>
        <div class="checkboxes">
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check">
                    @Html.HiddenFor(m => m.Roles[i].RoleName)
                    <label class="form-check-label">
                        @Html.CheckBoxFor(m => m.Roles[i].Selected, new { @class = "form-check-input" })
                        @Model.Roles[i].RoleName
                    </label>
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save Roles</button>
</form>
